{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "outDir": ".",
    "sourceMap": false,
    "strict": true,
    "target": "ESNext",
    "paths": {
      "@ccreusat/rollup-lib": ["./src"],
      "@ccreusat/rollup-lib/*": ["./src/*"]
    }
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
