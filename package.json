{
  "name": "root",
  "version": "0.0.0-development",
  "private": true,
  "description": "@ccreusat react monorepo",
  "scripts": {
    "storybook": "cd packages/storybook && start-storybook -p 6006",
    "semantic-release": "semantic-release"
  },
  "workspaces": [
    "packages/icons",
    "packages/lib",
    "packages/storybook"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ccreusat/ccre-ui.git"
  },
  "keywords": [
    "react",
    "frontend",
    "storybook",
    "components",
    "ui",
    "vite"
  ],
  "author": "Clement Creusat",
  "bugs": {
    "url": "https://github.com/ccreusat/ccre-ui/issues"
  },
  "homepage": "https://github.com/ccreusat/ccre-ui#readme",
  "devDependencies": {
    "semantic-release": "^19.0.3",
    "semantic-release-monorepo": "^7.0.5"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ],
    "extends": "semantic-release-monorepo",
    "branches": [
      "master",
      "feature",
      "next"
    ]
  }
}
